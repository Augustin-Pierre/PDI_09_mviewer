{{#features}}
	<li id="{{feature_ol_uid}}" class="inventaire item" style="width:100%;">
		<h3 class="title-feature">{{Port}}</h3>

		<p class="text-feature">
            {{#payantes}}
                <span> Nombre de cales payantes: </span> {{Nb_Payante}}<br/>
            {{/payantes}}
			
			{{#gratuites}}
				<span> Nombre de cales gratuites: </span> {{Nb_Gratuite}}
			{{/gratuites}}

			{{#Source}}
				<span> Source  :</span> {{Source}}<br/>
			{{/Source}}
			<div class="wfs_complements" id="{{search_id}}" style="padding-left:0px;"><div>

        </p>
	</li>
{{/features}}

<style>
	.inventaire .title-feature {
		color: #BA88A4;
		font-family:"roboto_bold";
		font-size:16px;
		margin-bottom:1%;
		line-height:1;
	}
	.inventaire .text-feature{
		font-family:"roboto_regular";
		color:#555;
		font-size:13px;
		margin-top:5px;
	}
	.inventaire .text-feature span{
		font-family:"roboto_bold";
	}


    .inventaire p, .inventaire h3 {
        padding-left:15px;
        padding-right:15px;
    }


</style>